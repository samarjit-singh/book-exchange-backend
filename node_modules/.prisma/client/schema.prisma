generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  mobile    String
  password  String
  role      Role
  books     Book[]   @relation("OwnerBooks")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id        String     @id @default(uuid())
  title     String
  author    String
  genre     String?
  location  String
  contact   String
  status    BookStatus @default(AVAILABLE)
  ownerId   String
  owner     User       @relation("OwnerBooks", fields: [ownerId], references: [id])
  imageUrl  String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum Role {
  OWNER
  SEEKER
}

enum BookStatus {
  AVAILABLE
  RENTED
  EXCHANGED
}
